@model List<Microsoft.ILP2025.EmployeeCRUD.Entities.EmployeeEntity>

<h1>Employee List</h1>

<a asp-action="Create" class="btn btn-success mb-2">Add New Employee</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Department</th>
            <th>Email</th>
            <th>Date Of Joining</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.Name</td>
            <td>@emp.Department</td>
            <td>@emp.Email</td>
            <td>@emp.DateOfJoining.ToShortDateString()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-sm btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-sm btn-danger">Delete</a>
                <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-sm btn-info">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
